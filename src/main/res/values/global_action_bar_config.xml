<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- 定义ActionBar样式 -->
    <color name="action_bar_bg_color">#FFFFFF</color>

    <style name="style_action_bar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/action_bar_bg_color</item>
    </style>

    <!-- 返回按钮样式定义 -->
    <drawable name="action_bar_back">@drawable/ic_action_bar_back</drawable>
    <bool name="action_bar_back_visible">true</bool>

    <style name="style_action_bar_back">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">10dp</item>
        <item name="android:src">@drawable/action_bar_back</item>
    </style>

    <!-- 关闭按钮样式定义 -->
    <drawable name="action_bar_close">@drawable/ic_action_bar_close</drawable>
    <bool name="action_bar_close_visible">false</bool>

    <style name="style_action_bar_close">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">10dp</item>
        <item name="android:src">@drawable/action_bar_back</item>
        <item name="android:visibility">gone</item>
    </style>

    <!-- 标题样式定义 -->
    <color name="action_bar_title_color">#333333</color>
    <dimen name="action_bar_title_size">16sp</dimen>
    <bool name="action_bar_title_visible">true</bool>

    <style name="style_action_bar_title">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/action_bar_title_color</item>
        <item name="android:lines">1</item>
        <item name="android:maxLines">1</item>
        <item name="android:text">标题</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textSize">@dimen/action_bar_title_size</item>
    </style>

    <!-- 右边TextView样式定义 -->
    <color name="action_bar_right_text_color">#333333</color>
    <dimen name="action_bar_right_text_size">14sp</dimen>
    <bool name="action_bar_right_text_visible">false</bool>

    <style name="style_action_bar_right_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:lines">1</item>
        <item name="android:maxLines">1</item>
        <item name="android:padding">10dp</item>
        <item name="android:text">保存</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textSize">@dimen/action_bar_right_text_size</item>
        <item name="android:visibility">gone</item>
        <item name="android:textColor">@color/action_bar_right_text_color</item>
    </style>

    <!-- 定义右边图标样式 -->
    <drawable name="action_bar_right_image">@drawable/ic_action_bar_done</drawable>
    <bool name="action_bar_right_image_visible">false</bool>

    <style name="style_action_bar_right_image">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:src">@drawable/action_bar_right_image</item>
        <item name="android:padding">10dp</item>
        <item name="android:visibility">gone</item>
    </style>

    <!-- 定义顶部分割线样式 -->
    <bool name="action_bar_bottom_line_visible">false</bool>
    <color name="action_bar_bottom_line_color">#DDDDDD</color>

    <style name="style_action_bar_bottom_line">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:visibility">gone</item>
        <item name="backgroundColor">@color/action_bar_bottom_line_color</item>
    </style>

</resources>