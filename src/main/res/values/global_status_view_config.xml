<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- 状态View背景 -->
    <drawable name="style_simple_status_view_bg">@color/global_background_color</drawable>

    <!-- 参考线 -->
    <style name="style_simple_status_view_guideline">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
        <item name="layout_constraintGuide_percent">0.4</item>
    </style>

    <!-- 状态View图片样式 -->
    <style name="style_simple_status_view_image">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="layout_constraintBottom_toBottomOf">@id/guide_status_line</item>
        <item name="layout_constraintStart_toStartOf">parent</item>
        <item name="layout_constraintEnd_toEndOf">parent</item>
        <item name="layout_constraintTop_toTopOf">@id/guide_status_line</item>
    </style>

    <!-- 状态View文本样式 -->
    <style name="style_simple_status_view_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">15dp</item>
        <item name="android:textColor">#333333</item>
        <item name="android:textSize">14sp</item>
        <item name="layout_constraintStart_toStartOf">parent</item>
        <item name="layout_constraintEnd_toEndOf">parent</item>
        <item name="layout_constraintTop_toBottomOf">@id/iv_status_view</item>
    </style>

    <!-- 状态View按钮样式 -->
    <style name="style_simple_status_view_button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">10dp</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:background">#999999</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="layout_constraintStart_toStartOf">parent</item>
        <item name="layout_constraintEnd_toEndOf">parent</item>
        <item name="layout_constraintTop_toBottomOf">@id/tv_status_view</item>
    </style>

    <!-- 加载中显示内容 -->
    <string name="style_simple_status_loading_text">玩命加载中</string>
    <drawable name="style_simple_status_loading_img_res">@drawable/ic_action_bar_done</drawable>
    <string name="style_simple_status_loading_button_text">取消加载</string>
    <!-- VISIBLE=0 、INVISIBLE=4 、 GONE=8-->
    <integer name="loadingTextVisibility">0</integer>
    <integer name="loadingImgVisibility">0</integer>
    <integer name="loadingBtnVisibility">8</integer>

    <!-- 加载失败显示内容 -->
    <string name="style_simple_status_error_text">出错啦</string>
    <drawable name="style_simple_status_error_res">@drawable/ic_action_bar_close</drawable>
    <string name="style_simple_status_error_button_text">再试一次</string>
    <integer name="errorTextVisibility">0</integer>
    <integer name="errorImgVisibility">0</integer>
    <integer name="errorBtnVisibility">0</integer>


    <!-- 空显示内容 -->
    <string name="style_simple_status_empty_text">空空如也</string>
    <drawable name="style_simple_status_empty_res">@drawable/ic_action_bar_back</drawable>
    <string name="style_simple_status_empty_button_text">重试</string>
    <integer name="emptyTextVisibility">0</integer>
    <integer name="emptyImgVisibility">0</integer>
    <integer name="emptyBtnVisibility">0</integer>
</resources>