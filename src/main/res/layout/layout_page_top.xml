<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <View
        android:id="@+id/v_state_bar"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@color/action_bar_bg_color"
        tools:layout_height="12dp" />

    <com.duxl.baselib.widget.ActionBarView
        android:id="@+id/action_bar_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:abv_close_visible="true"
        app:abv_close_icon="@drawable/ic_action_bar_close"
        app:abv_back_icon="@drawable/ic_action_bar_back"
        tools:abv_right_icon_visible="true"
        tools:abv_right_text="保存"
        tools:abv_right_text_visible="true"
        tools:abv_title="标题" />

</merge>